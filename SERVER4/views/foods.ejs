<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
  <meta charset="utf-8">
  <title>Daily News</title>
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
  <link rel="stylesheet" href="css/bootstrap-social.css">
  <link rel="stylesheet" href="css/styles.css">
</head>
<body>
<div class="container mt-5">
  <h1>Food Items</h1>

  <div class="row">
    <div class="col-lg-6">
      

        <% foodItems.forEach(function(foodItem){ %>
            <div class="card" style="width: 20%; display: inline-block;">
                <img class="card-img-top" src="<%= foodItem.imageUrl %>" alt="Card image cap">
                <div class="card-body">
                    <h6 class="card-title">Name : <%= foodItem.name %></h6>
                    <p class="card-text">Available Quantity : <%= foodItem.quantity %></p>
                    <p class="card-text">Price : <%= foodItem.price %></p>
                </div>
            </div>
        <% }) %>
        <br/><br/><br/><br/>
        <h1>My Orders</h1>
        <a href="/my-orders" class="btn btn-primary">see your all orders</a>
       
    </div>
    <div class="col-lg-6">
        <h1>Place Order</h1>
        <form action="/order-food" method="POST">
            <div class="form-group">
                <label for="veg_burger_quantity">Veg Burger Quantity : </label>
                <input type="text" class="form-control" name="veg_burger_quantity">
            </div>
            <div class="form-group">
                <label for="cheese_burger_quantity">Cheese Burger Quantity : </label>
                <input type="text" class="form-control" name="cheese_burger_quantity">
            </div>
            <div class="form-group">
                <label for="chicken_burger_quantity">Chicken Burger Quantity : </label>
                <input type="text" class="form-control" name="chicken_burger_quantity">
            </div>
            <div class="form-group">
                <label for="address">Address: </label>
                <input type="text" class="form-control" name="address">
            </div>
            <div class="form-group">
                <label for="contact">Contact No : </label>
                <input type="text" class="form-control" name="contact">
            </div>
            <button class="btn btn-primary" type="submit">Order Now</button>
        </form>
    </div>
  </div>
</div>
</body>
</html>